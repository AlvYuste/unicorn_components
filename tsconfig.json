{
    "compilerOptions": {
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "noImplicitAny": false,
        "noEmitOnError": true,
        "removeComments": true,
        "outDir": "out-tsc/spec",
        "baseUrl": "src",
        "target": "es5",
        "types": [
            "jasmine",
            "node"
        ],
        "styles": [
            "src/styles/themes/cms/_all.scss"
        ],
        "lib": [
            "es6",
            "dom"
        ],
        "typeRoots": [
            "node_modules/@types"
        ]
    },
    "files": [
        "test/test.ts"
    ],
    "include": [
        "**/*.spec.ts",
        "**/*.d.ts"
    ]
}
